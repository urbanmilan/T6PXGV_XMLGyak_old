<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

	<xs:element name = "konyvek">
		<xs:complexType>
			<xs:sequence>
				<xs:element name ="konyv" minOccurs = "0", maxOccurs="unbounded">
					<xs:complexType>
						<xs:sequence>
							<xs:element name ="cim" type="xs.string" minOccurs="0" maxOccurs = "1"></xs:element>
							<xs:element name ="szerzo" type="xs.string"></xs:element>
							<xs:element name ="szereplo" type="xs.string" minOccurs="0" maxOccurs = "20"></xs:element>
								
								<xs:complexType>
									<xs:sequence>
										<xs:element name ="nev" type="xs.string"></xs:element>
										<xs:element name ="baratja" type="xs.string" minOccurs="0" maxOccurs = "unbounded"></xs:element>
										<xs:element name ="szuletett" type="xs.string"></xs:element>
										<xs:element name ="jellemzes" type="xs.string"></xs:element>
									</xs:sequence>
								</xs:complexType>						
						</xs:sequence>
						<xs:attriute name ="isbn" type="xs:string"/>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>